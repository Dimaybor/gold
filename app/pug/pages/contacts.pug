  include header
  section.faq.header-indent
    .wrapper
      .faq__content
        .faq__wrapper
          .our-contacts
            .our-contacts__item
              p.our-contacts__name Showroom 1
              p.our-contacts__address Kyiv, Redutnaya str., 8
              p.our-contacts__number +38 095 353 33 42
