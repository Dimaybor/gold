                a.contacts-socials__link(href='#')
                  img(src='img/vk.png' alt='alt')
            .our-contacts__item
              a.site-info(href='#') info@goldvintage.net
          .to-ask
            form(action='#' method='post')
              .form-ask
                input.form-ask__item(type='text' autocomplete='on' placeholder='Full name')
                input.form-ask__item(type='email' autocomplete='on' name='login' placeholder='Phone or email')
                .form-ask__container
                  textarea.form-ask__item.form-ask__textarea(name='comment' placeholder='Your question')
                input.form-ask__item.form-ask__btn(type='submit' value='send message')
