//---------------My bag
.in-bag
  &__item
    width 37.5%
    
    &:last-child
      width 25%
  
  &__container
    display flex
    border 0px solid #eaeaea
    border-bottom-width 1px

  &__header
    width 100%
    height 50px
    font-size 13px
    line-height 50px
    color #838383
    border 0px solid #eaeaea
    border-bottom-width 1px
    
  &__content
    display flex
    align-items center
    min-height 126px
    
    &--indent
      padding-top 35px
      align-items flex-start
    
    & .in-bag__img + .in-bag__about
      margin-left 32px

  &__img 
    width 88px
    max-height 88px

  &__size
    display block

  &__about
    
    & span
      display block
      font-size 13px
      color #838383
      
  &__price
    font-weight bold
    
    & + a 
      margin-left 85px
    
  & a
    font-weight normal

.bag-payment
  display flex
  justify-content space-between
  align-items center
  min-height 120px
  
  &__money
    display flex
    align-items center

  &__paypal
    display block
    width 228px
    height 44px
    
  &__paypal + &__amount
    margin-left 35px

  &__amount
    display flex
    align-items center
    
    & span
      margin-left 20px
      font-size 28px 
      font-weight bold
      color #b6926f
  
  &__amount + &__pay
    margin-left 45px

  &__pay
    display flex
    justify-content center
    align-items center
    width 110px
    height 55px
    color #b6926f
    border 1px solid #eaeaea
    text-transform uppercase
    
    &:hover
      background-color #d7c099
      transition all 0.3s ease