//---------------Shipping info
.cart-summary
  margin-top 5px
  
  &__heading
    font-size 13px
    
    & .auxiliary-link
      margin-left 15px
      
  &__heading + &__container
    margin-top 15px
    padding 30px 55px
    border 1px solid #eaeaea
    
  &__container
    display flex
    justify-content space-between
    
  &__item
    display flex
    
    & + &
      margin-top 20px
    
    & img
      width 50px
      height 50px
      
    & img + .cart-summary__info
      margin-left 10px

  &__price
    margin-left 35px
    font-weight bold

  &__about
    display block
    font-size 13px
    color #838383
    
.summary-amount
  width 100%
  max-width 240px
  
  &__item
    display flex
    justify-content space-between
    
    &--line
      padding-top 10px
      border-top 1px solid #343434
      
      & .summary-amount__price
        font-size 28px
        line-height 28px
    
    & + &
      margin-top 14px
    
  &__price
    font-weight bold
    
//---------------Shipping form
.shipping
  
  &-steps
    padding-top 60px
  
  &-heading
    display flex
    
    & + .shipping-subtitle
      margin-top 35px
    
  &-header
    margin 0
    font-size 42px
    line-height 56px
    font-weight normal
  
  &-subtitle
    margin-bottom 10px
    font-weight bold
    
.step-number
  margin-right 10px
  padding-top 7px
  font-size 22px

.choose-method
  padding-top 25px
  display flex
  justify-content space-between
  border-top 1px solid #eaeaea
  
  &__item
    max-width 230px
    cursor pointer
    
    & .label
      margin-left 10px
      font-size 13px
      font-weight bold
      color #343434
  
  &__hint
    margin-left 20px
    display block
    font-size 13px
    color #838383

  
