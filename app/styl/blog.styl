//---------------Blog
.blog
  padding-bottom 100px
      
//---------------Publication
.blog .main-event
  padding 60px 0 80px
  
.publications
  display flex
  flex-wrap wrap
  justify-content space-between
  
  &__item
    display flex
    flex-direction column
    margin-bottom 45px
    padding-bottom 20px
    max-width 470px

  &__img
    max-width 470px
    line-height 0

  &__text
    max-width 400px
    
  &__content
    min-height 210px
    
  &__content .content-data
    margin 25px 0 10px
    
  &__content .arrow-link
    margin-top 20px
    
//---------------Blog-news
.blog-news
  padding-bottom 100px
  
  &__container
    display flex
    justify-content space-between
    padding-top 40px

.share
  display flex
  flex-direction column
  align-items center
  width 42px
  
  &__social
    display flex
    justify-content center
    align-items center
    width 40px
    height 40px
    background-color #d7c099
    transition all 0.3s ease
    
    &:hover
      background-color #b6926f
    
    & + &
      margin-top 6px
      
  &__quantity
    margin-bottom 10px
    font-size 18px
    font-weight bold
    text-align center
    color #b6926f
    
    & span
      display block
      font-size 13px 
      font-weight normal
      color #838383

.blog-content
  padding 0 10px 0
  max-width 552px
  
  &__text
    margin 15px 0 40px
    margin-bottom 40px
  
  &__subtitle
    margin-top 50px
    font-weight bold
    
  &__list
    padding-left 55px
    
    & + .blog-content__img
      margin-top 70px
    
  &__item
    position relative
    
    &:before
      content ''
      position absolute
      top 13px
      left -10px
      width 5px
      height 5px
      border 1px solid #c99b5e
      transform translate(-50%, -50% )

  &__item + &__item
    margin-top 30px

.quote
  display flex
  
  &__author
    display flex
    align-items flex-end
    margin-left 5px
    font-size 13px
    line-height 18px
    color #838383
    
  & + .uttering
    margin-top 15px

.quotes
  max-width 50px

.uttering
  margin-left 55px
  
.blog-content blockquote
  margin-bottom 65px

.share + .blog-content
  margin-left 10px

.blog-content + .side-bar 
  margin-left 10px
  
.side-bar
  width 100%
  max-width 232px
  
  &__social
    display flex
    justify-content center
    align-items center
    width 100%
    height 236px
    border 3px solid #fbfbfb
    text-transform uppercase
    color #979797
    
    &:hover
      background-color #dedede
      transition all 0.3s ease
      
    & + &
      margin-top 20px
      
  & .sign-up__container
    flex-direction column
    align-items center
    
  & .form-ask__item
    width 100%
    text-align center
    
  & .form-ask__item + .form-ask__item
    margin-top 10px
  
.side-news
  display block
  max-width 100%

  &__name
    margin-top 20px
    font-weight bold
  
  &__name + &__text
    margin-top 5px
    
  &__text
    font-size 13px
    line-height 22px
    
  & + &
    margin-top 50px