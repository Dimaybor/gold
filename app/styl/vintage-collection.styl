//----------------Collection
.vintage-recommendations
  background-color #f7f6f2
  
  & .recently-viewed
    padding-bottom 0

.collection
  position relative
  z-index 5
  
  &-decorate
    position absolute
    left 0
    right 0
    bottom -350px
    z-index 999
    display flex
    justify-content center
    margin 0 auto
    width 100%
    max-width 950px
    line-height 0
    
    &__item
      width 50%
      height auto
  
  & .one-product
    padding-top 90px
  
  &-bg
    z-index -1
    position absolute
    top 0
    left 0
    right 0
    margin 0 auto
    width 100%
    max-width 1440px
    min-height 1336px
    background-color #f4eee5
  
  & .product-buy
    order 1

  & .description-list
    margin-bottom 25px  
  
  &-head
    position relative
    z-index 2
    margin 0 auto 350px
    width 100%
    max-width 1440px

    &:after
      content ''
      z-index 3
      position absolute
      display block
      top 0
      right 0
      width 100%
      height 66%
      background-color #fff
      transform skewY(-22.5deg) translateY(80%)
      transform-origin 100%
  
  &-info
    display flex
  
  &-content
    width 50%
    
    &__container
      margin 65px 0 0 60px
      max-width 300px
      
      & + .arrow-vertical
        margin-top 20px
      
    &__text + .details-link
      margin-top 20px

  &-img
    z-index 1
    width 498px
    height auto
    transform translateY(-3%)
    line-height 0
    
    &__mobile
      display none
  
  &-photos
    display flex
    flex-wrap wrap
    line-height 0
    
    &__item
      width 50%
      height auto
      
    &__video
      width 100%
      height auto

.main-heading + .collection-content__text
  margin-top 35px
    
.main-heading a
  color #b6926f
  font-weight bold
  
.details-link
  position relative
  padding-left 17px
  display block
  max-width 80px
  text-transform uppercase
  color #b6926f
  
  &:before
    content ''
    position absolute
    top 50%
    left 0
    width 6px
    height 6px
    border 2px solid #b6926f
    border-width 0 2px 2px 0
    transform translateY(-50%) rotate(-45deg)
    
  & + .product-buy
    margin-top 30px
    
