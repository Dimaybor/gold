//---------------Main Event  
.main-footer
  padding-top 50px
  background-color #d7c099
  min-height 306px
  color #fff
  
  .main-btn
    border solid transparent
  
  &__list
    max-width 170px

  &__container
    display flex
    justify-content space-between
    width 100%
    
  &__copyright
    margin-top 55px
    width 100%
    height 50px
    background-color #fff
    color #8b8b8b
    
  &__item
    display none

.footer-list
  display flex
  flex-direction column
  margin-top 25px

  &__item + &__item
    margin-top 10px

  &__link
    font-size 13px
    color #fff
    
  &__link:hover
    color #b6926f
  
  &__link span
    display block
    height 20px
    font-size 13px

.name-list
  display block
  line-height 18px
  text-transform uppercase
  color #fff
  
  &:hover
    color #b6926f
  
.feedback
  display flex
  flex-direction column
  justify-content center
  align-items center
  
  &__name
    font-size 18px
    line-height 42px
    font-weight bold
  
  &__name + .main-btn
    margin-top 15px

.copyright
  height 50px
  text-align left
  font-size 13px
  line-height 50px
  
.socials
  display flex
  align-items center
  
  &__link
    height 20px

    & + &
      display block
      margin-left 10px
    
  &__title
    display block
    margin-right 15px
    
//---------------Popup
.overlay
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  z-index 9999
  background-color alpha(#000, 0.7)
  display none
  overflow-y hidden

.body-inactive
  overflow hidden

.popup
  position absolute
  width 100%
  max-width 830px
  max-height 95vh
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background-color #fff
  color #343434
  overflow-y auto
  
  &__content
    padding 90px 0 39px
    width 100%
    
  &__content .main-heading
    margin 0
    
  &__content * + p
    margin-top 30px
    
  &__wrapper
    padding 0 145px 0 120px
    
  &__wrapper + &__btn-container
    margin-top 55px

  &__btn-container
    display flex
    justify-content flex-end
    padding-right 60px
    
.popup-properties
  display block

  &__item:first-child
    margin-top 15px
  
  &__item
    position relative
    margin-left 15px
    display block
    
  &__item:before
    content ''
    position absolute
    top 13px
    left -7.5px
    width 5px
    height 5px
    border-radius 50%
    background-color #b6926f
    transform translate(-50%, -50%)
    
  &__item + &__item
    margin-top 5px

.popup-showrooms
  display flex
  justify-content space-between
  margin-top 30px
  width 100%
  
  &__item
    position relative
    padding-left 15px
    width 50%
    min-height 75px
    
  &__item:before
    content ''
    position absolute
    width 60px
    height 2px
    background-color #b6926f
    transform translate(-45px, 37.5px) rotate(90deg)
    
  &__name
    display block
    font-size 13px
    
  &__item span
    display block
    
  &__number
    line-height 22px

.close
  position absolute
  top 20px
  right 20px
  width 20px
  height 20px
  cursor pointer

.close:before
  content ''
  position absolute
  background-color #b6926f
  height 2px
  width 15px
  top 11px
  left -4px
  transform translate(5px, -3px) rotate(45deg)
  
.close:after
  content ''
  position absolute
  background-color #b6926f
  height 2px
  width 15px
  top 11px
  left -4px
  transform translate(5px, -3px) rotate(-45deg)  