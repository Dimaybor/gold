//---------------Main Event  
.main-footer
  padding-top 50px
  background-color #d7c099
  min-height 306px
  color #fff
  
  &__list
    max-width 170px

  &__container
    display flex
    justify-content space-between
    width 100%
    
  &__copyright
    margin-top 55px
    width 100%
    height 50px
    background-color #fff
    color #8b8b8b

.footer-list
  display flex
  flex-direction column
  margin-top 25px

  &__item + &__item
    margin-top 10px

  &__link
    font-size 13px
    color #fff
    
  &__link:hover
    color #b6926f
  
  &__link span
    display block
    height 20px
    font-size 13px

.name-list
  display block
  line-height 18px
  text-transform uppercase
  
.feedback
  display flex
  flex-direction column
  justify-content center
  align-items center
  
  &__name
    font-size 18px
    line-height 42px
    font-weight bold
  
  &__name + &__btn
    margin-top 15px

  &__btn
    display flex
    justify-content center
    align-items center
    width 170px
    height 55px
    color #b6926f
    background-color #fff
    border 1px solid #eaeaea
    text-transform uppercase

.copyright
  height 50px
  text-align left
  font-size 13px
  line-height 50px
  
.footer-socials
  display flex
  align-items center
  
  &__link + &__link
    display block
    margin-left 10px
    
  &__title
    display block
    margin-right 15px
    
//---------------Popup
.overlay
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  z-index 9999
  background-color alpha(#000, 0.7)
  display none
  overflow-y hidden

.body-inactive
  overflow hidden

.popup
  position absolute
  width 600px
  height 450px
  top 50%
  left 50%
  transform translate(-50%, -50%)
  background-color #fff
    
.close
  position absolute
  top 20px
  right 20px
  width 20px
  height 20px
  cursor pointer

.close:before
  content ''
  position absolute
  background-color #b6926f
  height 3px
  width 15px
  top 11px
  left -4px
  transform translate(6px, -4px) rotate(45deg)
  
.close:after
  content ''
  position absolute
  background-color #b6926f
  height 3px
  width 15px
  top 11px
  left -4px
  transform translate(6px, -4px) rotate(-45deg)  