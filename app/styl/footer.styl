//---------------Main Event  
.main-footer
  padding-top 50px
  background-color #d7c099
  min-height 306px
  color #fff
  
  &__list
    max-width 170px

  &__container
    display flex
    justify-content space-between
    width 100%
    
  &__copyright
    margin-top 55px
    width 100%
    height 50px
    background-color #fff
    color #8b8b8b

.footer-list
  display flex
  flex-direction column
  margin-top 25px

  &__item + &__item
    margin-top 10px

  &__link
    font-size 13px
    color #fff
    
  &__link:hover
    color #b6926f
  
  &__link span
    display block
    height 20px
    font-size 13px

.name-list
  display block
  line-height 18px
  text-transform uppercase
  
.feedback
  display flex
  flex-direction column
  justify-content center
  align-items center
  
  &__name
    font-size 18px
    line-height 42px
    font-weight bold
  
  &__name + &__btn
    margin-top 15px

  &__btn
    display flex
    justify-content center
    align-items center
    width 170px
    height 55px
    color #b6926f
    background-color #fff
    border 1px solid #eaeaea
    text-transform uppercase
    
.copyright
  height 50px
  text-align left
  font-size 13px
  line-height 50px
  
.footer-socials
  display flex
  align-items center
  
  &__link + &__link
    display block
    margin-left 10px
    
  &__title
    display block
    margin-right 15px
  