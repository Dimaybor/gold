//--------------header
.header-indent
  margin-top 160px

.logo-scroll
  display none

.main-logo
  display flex
  justify-content center
  align-items flex-end
  margin 0 auto
  padding 34px 0 20px
  width 100%
  max-width 1440px
  transition all 0.3s ease

  &__link
    display flex
    justify-content center
    line-height 0

.main-header
  position fixed
  margin 0 auto
  top 0
  left 0
  right 0
  max-width 1440px
  z-index 999
  background-color #fff
  transition all 0.3s ease

  &--scroll
    height 80px
    //box-shadow 0px 0px 20px 0px rgba(204,204,204,1)
  
  &--scroll .logo-static
    display none

  &--scroll .logo-scroll
    display block
    
  &--scroll .main-logo
    padding 8px 0 0

.lang
  display flex
  align-items center
  font-size 13px

  &__item
    display flex
    justify-content center
    min-width 30px
    color #838383
  
    &--active
      position relative
      color #343434
      
    &--active::after
      content ''
      position absolute
      bottom 4px
      left 0
      width 100%
      height 1px
      background linear-gradient(#b6926f, #d7c099)
  
.main-nav
  display flex
  justify-content space-between

.main-menu
  display flex
  
  &__item
    display flex
    align-items center
    min-height 50px
  
  &__item + &__item
    margin-left 20px

  &__link
    padding 0 4px
    line-height 18px
    text-transform uppercase
   

.user-bag
  display flex
  justify-content space-between
  align-items center
  min-width 90px
  
  &__img
    line-height 0

  &__number
    color #838383
  
  &__number:hover
    color #343434