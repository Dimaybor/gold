//--------------header 
.close-up
  display none
  width 50px
  font-size 13px
  color #838383
  cursor pointer
  
  &__arrow
    position relative
    margin-right 8px
    width 10px
    height 10px
    
    &:before
      content ''
      position absolute
      top 50%
      left 50%
      width 5px
      height 5px
      border solid #d7c099
      border-width 0 0 2px 2px
      transform translate(-50%, -50%) rotate(45deg)
      
    &:after
      content ''
      position absolute
      top 50%
      left 2px
      width 8px
      height 2px
      background-color #d7c099
      transform translateY(-50%)   

.menu-open
  position fixed
  left 25px
  top 25px
  display none
  width 30px
  height 25px
  background-color #fff
  transform translateY(-50%)
  
  &__line
    display block
    width 100%
    height 2px
    background-color #b6926f
    
    & + &
      margin-top 5px

.logo-scroll
  display none
  
.logo-mobile
  display none

.main-logo
  display flex
  justify-content center
  align-items flex-end
  margin 0 auto
  padding 34px 0 20px
  width 100%
  max-width 1440px
  transition all 0.3s ease

  &__link
    display flex
    justify-content center
    line-height 0

.main-header
  position fixed
  top 0
  left 0
  right 0
  z-index 9
  margin 0 auto
  background-color transparent
  transition all 0.3s ease

  &--scroll
    height 80px
    background-color #fff
    box-shadow 0px 0px 20px 0px rgba(204,204,204,1)
  
  &--scroll .logo-static
    display none

  &--scroll .logo-scroll
    display block
    
  &--scroll .main-logo
    padding 8px 0 0

.lang
  display flex
  align-items center
  font-size 13px

  &__item
    display flex
    justify-content center
    min-width 30px
    color #838383
  
    &--active
      position relative
      color #343434
      
    &--active::after
      content ''
      position absolute
      bottom 4px
      left 0
      width 100%
      height 1px
      background linear-gradient(#b6926f, #d7c099)
  
.main-nav
  display flex
  justify-content space-between
  
  .socials
    display none

.main-menu
  display flex
  
  &__item
    display flex
    align-items center
    min-height 50px
  
  &__item + &__item
    margin-left 20px

  &__link
    padding 0 4px
    line-height 18px
    text-transform uppercase

.activeLink
  position relative
      
  &:after
    content ''
    position absolute
    bottom 0
    left 0
    display block
    width 100%
    height 1px
    background linear-gradient(to right, #b6926f, #d7c099)

.user-bag
  position relative
  display flex
  flex-direction column
  justify-content center
  min-width 90px
  cursor pointer
  
  &__container
    display flex
    justify-content space-between
    align-items center
  
  &__img
    line-height 0

  &__number
    color #838383
  
  &__number:hover
    color #343434
      
.open-bag
  position absolute
  bottom 0
  left 50%
  display none
  width 252px
  min-height 228px
  background-color #fff
  border 1px solid #eaeaea
  transform translate(-50%, 100%)
  cursor default
  
  &--active
    display block
  
  &__container
    position relative
    padding 20px 20px 0
    width 100%
    border 1px solid #eaeaea
    
    &:before
      content ''
      position absolute
      top -1%
      left 50%
      width 6px
      height 6px
      background-color #fff
      border 2px solid #eaeaea
      border-width  2px 2px 0 0
      transform translate(-50%, -50%) rotate(-45deg)
  
  &__close
    position absolute
    top 25px
    right 16px
    width 15px
    height 15px
    cursor pointer
    
    &:before
      content ''
      position absolute
      top 50%
      left 50%
      width 13px
      height 2px
      background-color #eaeaea
      transform translate(-50%, -50%) rotate(45deg)
    
    &:after
      content ''
      position absolute
      top 50%
      left 50%
      width 13px
      height 2px
      background-color #eaeaea
      transform translate(-50%, -50%) rotate(-45deg)

  &__product 
    display flex
    align-items flex-start
    min-height 93px
    border 1px solid #343434
    border-width 0 0 1px
    
    & img
      width 50px
      height 71px
      line-height 0
      
  &__name
    display block
    padding 0 20px 0 10px
    
    & span
      display block
      font-weight bold
      
  &__price
    display flex
    align-items center
    justify-content space-between 
    width 100%
    height 58px
    
    & span
      font-size 18px
      font-weight bold
      
  &__links
    display flex
    align-items center
    justify-content space-between
    padding 0 20px
    width 100%
    height 53px
    
  &__pay
    color #b6926f
    text-transform uppercase
    
.bag-mobile
  position fixed
  top 15px
  right 25px
  z-index 10
  display none
  
  &__quantity
    position relative
    display flex
    justify-content center
    align-items center
    padding-top 3px
    width 17px
    height 16px
    font-size 9px
    color #b6926f
    
  &__img
    position absolute
    top 50%
    left 50%
    width 17px
    height 16px
    line-height 0
    transform translate(-50%, -50%)