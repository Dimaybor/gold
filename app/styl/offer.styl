//---------------Offer
.offer
  padding 50px 0 100px
  
  &__header
    font-size 28px 
    line-height 56px
    font-weight normal
  
  &__header + &__paragraph
    margin-top 10px
    
  &__paragraph
    padding-right 80px

//---------accordeon

.accordeon-trigger
  display flex
  justify-content space-between
  align-items center
  padding-left 25px
  width 100%
  min-height 50px
  font-size 13px
  line-height 18px
  color #838383
  background-color #fbfbfb
  
.accordeon-inner
  display none
  padding 0 0 45px 125px
  max-width 900px
  
  &__item
    margin-top 30px
  
.accordeon
  margin-top 55px
  width 100%
  height 100%
  
  &__list
    display flex
    flex-direction column
    align-items center
    
  &__item
    display block
    width 100%
    min-height 50px
  
  &__item + &__item
    margin-top 2px
    
  &__item .helper
    transform rotate(180deg)

  &__arrow
    position relative
    width 50px
    height 50px
    border 2px solid red
    border-width 0 0 0 2px



  
  &__arrow:before
    content ''
    position absolute
    bottom 23px
    right 20px
    width 10px
    height 2px
    background-color #d7c099
    transform rotate(90deg)
    
  &__arrow:after
    content ''
    position absolute
    bottom 23px
    right 20px
    width 6px
    height 6px
    border 2px solid #d7c099
    border-width 0 0 2px 2px
    transform translate(-1px, 3.5px) rotate(-45deg)