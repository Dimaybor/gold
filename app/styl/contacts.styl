//---------------Contacts
.faq
  padding 50px 0 100px
  
  &__header--indent + .accordeon
    margin-top 40px
    
  &__wrapper
    display flex
    justify-content space-between
    margin-bottom 105px

.our-contacts
  max-width 300px
  
  &__item
    font-size 28px
    
  &__address
    line-height 42px
  
  &__item + &__item
    margin-top 15px

  &__item:last-child
    margin-top 0
    line-height 26px

  &__name
    font-size 14px

  &__address + &__number
    margin-top 10px
    
  &__number
    line-height 42px
    color #838383
    
.contacts-socials
  display flex
  align-items center
  min-height 50px
  
  &__link + &__link
    display block
    margin-left 10px
    
.site-info
  font-size 14px
  color #838383
  text-decoration underline
  
