@media screen and (max-width: 1130px)

  //------------------------header
    
  .open-bag
    left -40%
    
    &__container:before
      left 80%
      
  .popup
    &__content
      padding 40px 0 20px
      
    &__wrapper
      padding 0 120px 0 100px

@media screen and (max-width: 1024px)

  //------------------------blog
  
  .publications
    flex-direction column
    justify-content flex-start
    align-items center
    
    &__content .arrow-link
      margin-left 85%

@media screen and (max-width: 960px)

  .selection-list + .selection-list
    margin-left 30px

  .popup
    max-width 80%


@media screen and (max-width: 767px)

  //------------------------header

  .back
    z-index 10
    position fixed
    top 0
    left 0
    padding-left 25px
    width 90%
    display block
    height 50px
    background-color #fff
    
    .close-up
      height 50px
    
  .header-indent
    margin-top 50px

  .main-header--scroll
    height 50px

    & .logo-scroll
      display none
      
    & .main-logo
      padding 0
  
  .logo-static
    display none
    
  .logo-mobile
    display block
  
  .main-logo
    align-items center
    height 50px
    padding 0

  .menu-open
    display block
  
  .open-nav
    position fixed
    left -100vw
    transition all 0.05s
    
    &--active
      transform translate(100vw, -50px)
      
  .main-menu
    flex-direction column
    
    &__item
        width 100%
        min-height 40px
        transition all 0.3s
      
      &__item + &__item
        margin-left 0
        
    &__link
      padding 0
  
  .main-nav
    flex-direction column
    justify-content flex-start
    width 100vw
    height 100vh
    max-width 100%
    padding 22px
    background-color #fff
    
    .socials
      display flex
    
    .close-up + .lang
      margin-top 35px
      
    .lang + .main-menu 
      margin-top 35px
      
    .main-menu + .socials
      margin-top 55px
    
  .user-bag
    display none
    
  .close-up
    display flex
    align-items center
    
  .bag-mobile
    display block

  //------------------------filter
  
  .filter
    display none
    
  .filter-mobile
    display block
    height 50px
    font-size 13px
    line-height 50px
    color #fff
    text-align center
    background-color #d7c099

  //------------------------blog
    
  .blog .main-event
    padding-top 30px
    
  .arrow-link:hover
    width 52px
    
  .roadmap
    display none
    
  .blog-news
    padding-bottom 50px
    
    &__container
      flex-direction column
  
  .blog-content
    align-self center
    
    & + .side-bar
      margin 25px 0 0 0
  
  .sign-up
    margin-top 20px

  .news-container
    display flex
    flex-wrap wrap
    justify-content space-around
    
  .side-news 
    margin 10px
    width 230px
    min-height 300px
    
    & + &
      margin-top 10px
    
  .side-bar
    display flex
    flex-wrap wrap
    justify-content space-around
    max-width 100%
    
    .sign-up__container
      width 100%
      
    .form-ask__item
      width 300px
    
    &__social
      width 236px
      
      & + &
        margin 0
    
  .share
    flex-direction row
    width 100%
    
    & + .blog-content
      margin 25px 0 0 0
    
    &__social + &__social
      margin 0 0 0 6px
    
    &__quantity
      margin 0 10px 0 0
  //------------------------main-offer
    
  .main-offer
    
    &__item:first-child
      margin-top 100px
      
  .main-event
    padding-bottom 50px
    
    &__container
      flex-direction column
      align-items center
      
  .block-img
    display flex
    flex-direction column
    align-items center
    width 100%
      
  .block-content
    width 100%
    
    &__wrapper
      padding-top 35px
      max-width 590px
      min-height 0
      
      & .arrow-link
        margin 40px 0 0 87%


  //------------------------footer
    
  .main-footer
    min-height 256px
    
    &__container
      justify-content center
    
    &__list
      display none
      
    &__copyright
      
      .main-footer__container
        justify-content space-between
      
      .copyright
        display none
        
      .socials
        display none
    
    &__item
      display block
      height 50px
      line-height 50px
      
  .popup
    padding 20px 25px
    max-width 90%
    
    &__content
      margin-top 65px
      padding 0
      
    &__wrapper
      padding 0
    
    &__btn-container
      padding 0
      justify-content center
      
      .main-btn
        width 270px
    
  .close
    display none
    

      
@media screen and (max-width: 650px)

  //------------------------main-offer
    
  .main-offer
    min-height 480px
    justify-content center
    
    &__content
      display flex
      flex-direction column
    
    &__link
      display block
      
      & + &
        margin-top 50px
      
      .main-btn
        margin 0 auto
        padding-right 30px
        justify-content center
        width 270px
      
    &__item
      display none


@media screen and (max-width: 480px)

  //------------------------header
    
  .menu-open
    width 13px
    height 9px
    
    &__line
      height 1px
      
      & + &
        margin-top 3px
  //------------------------blog
    
  .blog
    padding-bottom 0 
    
    .main-event
      padding 0
    
  .blog-content
    padding 0
    
    &__img
      width 100vw

  .publications
    &__content .arrow-link
      margin-left 80%
  
  .block-content
    width 110%
    transform translate(-15px, -60px)
    
    
    &__wrapper
      padding-left 30px

  //------------------------main-offer
    
  .main-offer
    background #ece7dd url('../img/small-bg.png') center no-repeat
    background-size cover
    
    &__link
      
      & + &
        margin-top 17px
        
  .sign-up
    margin-top 55px
    
    &__container
      flex-wrap wrap
    
    .form-ask__item
      width 270px
      text-align center
      
    .form-ask__btn
      margin-top 17px
        
  .block-img
    width 100vw
  
  .block-content
    align-items flex-start
    
    &__wrapper .arrow-link
      margin-left 80%
      
  //------------------------footer
   
  .popup
    max-width 100vw
    max-height 100vh
    
    &__content * + p
      margin-top 20px
    
    &-showrooms
      margin-top 20px
      flex-direction column
      align-items flex-start
      
      &__item
        width 100%
      
        & + &
          margin-top 25px
        
    &__wrapper + &__btn-container
      margin-top 40px
      

  .main-heading
    font-size 30px
    line-height 40px
    
        
@media screen and (max-width: 320px)

  .block-content__wrapper
    max-width 240px
    
    & .arrow-link
      margin-left 90%
    