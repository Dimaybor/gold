@media screen and (max-width: 1130px)

  //------------------------header
    
  .open-bag
    left -40%
    
    &__container:before
      left 80%
      
  .popup
    &__content
      padding 40px 0 20px
      
    &__wrapper
      padding 0 120px 0 100px

@media screen and (max-width: 1024px)

  //------------------------blog
  
  .publications
    flex-direction column
    justify-content flex-start
    align-items center
    
    &__content .arrow-link
      margin-left 85%

@media screen and (max-width: 960px)

  .selection-list + .selection-list
    margin-left 30px

  .popup
    max-width 80%
  
  .one-product
    flex-direction column
    align-items center
    padding-top 0
    
    &__about
      margin-top 30px
      max-width 650px


@media screen and (max-width: 768px)

  //------------------------header

  .back
    z-index 10
    position fixed
    top 0
    left 0
    display block
    padding-left 25px
    width 90%
    height 50px
    background-color #fff
    
    .close-up
      height 50px
    
  .header-indent
    margin-top 50px

  .main-header--scroll
    height 50px

    & .logo-scroll
      display none
      
    & .main-logo
      padding 0
  
  .logo-static
    display none
    
  .logo-mobile
    display block
  
  .main-logo
    align-items center
    padding 0
    height 50px

  .menu-open
    display block
  
  .open-nav
    position fixed
    left -100vw
    transition all 0.05s
    
    &--active
      transform translate(100vw, -50px)
      
  .main-menu
    flex-direction column
    
    &__item
        width 100%
        min-height 40px
        transition all 0.3s
      
      &__item + &__item
        margin-left 0
        
    &__link
      padding 0
  
  .main-nav
    flex-direction column
    justify-content flex-start
    padding 22px
    width 100vw
    height 100vh
    max-width 100%
    background-color #fff
    
    .socials
      display flex
    
    .close-up + .lang
      margin-top 35px
      
    .lang + .main-menu 
      margin-top 35px
      
    .main-menu + .socials
      margin-top 55px
    
  .user-bag
    display none
    
  .close-up
    display flex
    align-items center
    
  .bag-mobile
    display block

  //------------------------filter
  
  .filter
    display none
    
  .filter-mobile
    display block
    height 50px
    font-size 13px
    line-height 50px
    color #fff
    text-align center
    background-color #d7c099

  //----------------------- Product
  
  .product
    padding-top 26px
    
    &-size
      display none
    
    &-item
      margin-bottom 35px
      max-width 270px
      
      &__img
        width 270px
        
        img
          width 100%
          max-width 270px
    
    &-list
      justify-content space-around
  
  .size-mobile
    display block

  .pages
    padding-bottom 60px
    
    &__item
      width 40px
      height 40px
      
      &--hide
        display none
    
    &__container
      flex-direction column
      align-items center
      
    &__numbers + &-toggle
      margin-top 30px

  //------------------------slider
    
  .slider
    margin 0
    max-width 320px
    height 455px

    &-nav
      display none
      
  .one-product__slider
    position relative
      
  .product-buy__button
    width 150px
    
  //------------------------blog
    
  .blog .main-event
    padding-top 30px
    
  .arrow-link:hover
    width 52px
    
  .roadmap
    display none
    
  .blog-news
    padding-bottom 50px
    
    &__container
      flex-direction column
  
  .blog-content
    align-self center
    
    & + .side-bar
      margin 25px 0 0 0
  
  .sign-up
    margin-top 20px

  .news-container
    display flex
    flex-wrap wrap
    justify-content space-around
    
  .side-news 
    margin 10px
    width 230px
    min-height 300px
    
    & + &
      margin-top 10px
    
  .side-bar
    display flex
    flex-wrap wrap
    justify-content space-around
    max-width 100%
    
    .sign-up__container
      width 100%
      
    .form-ask__item
      width 300px
    
    &__social
      width 236px
      
      & + &
        margin 0
    
  .share
    flex-direction row
    width 100%
    
    & + .blog-content
      margin 40px 0 0 0
    
    &__social + &__social
      margin 0 0 0 6px
    
    &__quantity
      margin 0 10px 0 0
  //------------------------main-offer
    
  .main-offer
    
    &__item:first-child
      margin-top 100px
      
  .main-event
    padding-bottom 50px
    
    &__container
      flex-direction column
      align-items center
      
  .block-img
    display flex
    flex-direction column
    align-items center
    width 100%
      
  .block-content
    width 100%
    
    &__wrapper
      padding-top 35px
      max-width 590px
      min-height 0
      
      & .arrow-link
        margin 40px 0 0 87%


  //------------------------contacts and faq
  
  .faq
    padding 30px 0
    
    &__wrapper
      flex-direction column
      align-items center
      margin-bottom 35px
      
    .accordeon-header
      text-align center
  
  .accordeon-header + .accordeon
    margin-top 35px
  
  .our-contacts
    
    & + .to-ask
      margin-top 50px
      
    &__address
      span
        display block
      
    &__item
      text-align center
      
      & + &
        margin-top 40px
    
      .contacts-socials
        justify-content center
        
      &:last-child
        margin-top 0
        line-height 26px

  //------------------------offer
    
  .accordeon-inner
    padding-left 60px

  //------------------------footer
    
  .main-footer
    min-height 256px
    
    &__container
      justify-content center
    
    &__list
      display none
      
    &__copyright
      
      .main-footer__container
        justify-content space-between
      
      .copyright
        display none
        
      .socials
        display none
    
    &__item
      display block
      height 50px
      line-height 50px
      
  .popup
    padding 20px 25px
    max-width 90%
    
    &__content
      margin-top 65px
      padding 0
      
    &__wrapper
      padding 0
    
    &__btn-container
      justify-content center
      padding 0
      
      .main-btn
        width 270px
    
  .close
    display none
    
      
@media screen and (max-width: 650px)

  //------------------------offer
  
  .offer
    padding 35px 0
    
    &__paragraph
      padding-right 0
      
      & + .accordeon
        margin-top 35px
  
  .arrow-container
    display flex
    justify-content flex-end

  .accordeon
    margin 0 -25px
    width 100vw
    
    &__item
      min-height 70px
    
    &-header
      font-size 30px
      line-height 40px
      padding-right 20px
      
    &-trigger
      padding 0 25px
      min-height 70px
      
      .accordeon-arrow
        display none
    
    &-arrow--inside
      display block
      transform rotate(180deg)

    &-inner
      padding 0 25px
      
      &__item
        margin-top 20px
     


  //------------------------main-offer
    
  .main-offer
    justify-content center
    min-height 480px
    
    &__content
      display flex
      flex-direction column
    
    &__link
      display block
      
      & + &
        margin-top 50px
      
      .main-btn
        justify-content center
        margin 0 auto
        padding-right 30px
        width 270px
      
    &__item
      display none


@media screen and (max-width: 480px)

  //------------------------header
  
  .back
    width 85%

  .menu-open
    width 13px
    height 9px
    
    &__line
      height 1px
      
      & + &
        margin-top 3px
  //------------------------blog
    
  .blog
    padding-bottom 0 
    
    .main-event
      padding 0
      
    .block-content
      width 110%
      transform translate(-15px, -60px)
      
      &__wrapper
        padding-left 30px
    
  .blog-content
    padding 0
    
    &__list
      padding-left 15px
    
    &__img
      margin 0 -25px

  .publications
    &__content .arrow-link
      margin-left 80%
  
  
      
  .content-data + .main-heading
    margin-right 0
    
  .uttering
    margin-left 0
    
  .quote
    display block
    
    &__author
      margin 20px 0 0

  //------------------------main-offer
    
  .main-offer
    background #ece7dd url('../img/small-bg.png') center no-repeat
    background-size cover
    
    &__link
      
      & + &
        margin-top 17px
        
  .sign-up
    margin-top 55px
    
    &__container
      flex-wrap wrap
    
    .form-ask__item
      width 270px
      text-align center
      
    .form-ask__btn
      margin-top 17px
        
  .block-img
    width 100vw
  
  .block-content
    align-items flex-start
    
    &__wrapper .arrow-link
      margin-left 80%
      
  //------------------------footer
   
  .popup
    max-width 100vw
    max-height 100vh
    
    &__content * + p
      margin-top 20px
    
    &-showrooms
      flex-direction column
      align-items flex-start
      margin-top 20px
      
      &__item
        width 100%
      
        & + &
          margin-top 25px
        
    &__wrapper + &__btn-container
      margin-top 40px
      

  .main-heading
    font-size 30px
    line-height 40px
    
        
@media screen and (max-width: 320px)

  .block-content__wrapper
    max-width 240px
    
    & .arrow-link
      margin-left 90%
    